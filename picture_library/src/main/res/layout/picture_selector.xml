        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2"/>

        <TextView
            android:id="@+id/zl01xsq_yrpwr_picture_selector_activity_selector_picture_num"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/zl01xsq_yrpwr_view_47"
            android:paddingLeft="8dp"
            />
        <TextView
            android:layout_toRightOf="@+id/zl01xsq_yrpwr_picture_selector_activity_selector_picture_num"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/9"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/zl01xsq_yrpwr_picture_selector_activity_video"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
